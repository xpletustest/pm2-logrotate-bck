{
  "name": "pm2-logrotate",
  "version": "2.8.0",
  "description": "PM2 module that rotates application logs",
  "homepage": "https://github.com/mendrix/pm2-logrotate",
  "bugs": {
    "url": "https://github.com/mendrix/pm2-logrotate/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mendrix/pm2-logrotate.git"
  },
  "license": "MIT",
  "author": "Joni SHKURTI",
  "main": "app.js",
  "files": [
    "app.js"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "config": {
    "compress": false,
    "dateFormat": "YYYY-MM-DD_HH-mm-ss",
    "max_size": "10M",
    "retain": "30",
    "rotateInterval": "0 0 * * *",
    "rotateModule": true,
    "workerInterval": "10"
  },
  "dependencies": {
    "graceful-fs": "^4.2.2",
    "moment-timezone": "^0.5.11",
    "node-schedule": "^1.3.1",
    "pm2": "git+https://github.com/mendrix/pm2.git#5.1.2",
    "pmx": "latest"
  },
  "apps": [
    {
      "name": "pm2-logrotate",
      "script": "app.js",
      "max_memory_restart": "500M"
    }
  ]
}
